{
  "compilerOptions": {
    "checkJs": false,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@core/*": ["src/core/*"],
      "@microsite/*": ["src/microsite/*"],
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "build",
    ".vscode",
    ".nuxt",
    "coverage",
    "jspm_packages",
    "tmp",
    "temp",
    "bower_components",
    ".npm",
    ".yarn"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
